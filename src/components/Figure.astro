---
const { src, alt, text, style } = Astro.props;
import { Image } from 'astro:assets';
---

<div class="figure">
	<Image src={src} alt={alt} style=`width: 100%; height: auto; ${style}` />
	<figcaption style="font-style: italic;">{text}<figcaption>
</div>

<style>
  .figure {
	text-align: center;
	max-width: fit-content;
	margin-left: auto;
	margin-right: auto;
	width: 85%;
	padding: .5em;
  }
  figcaption {
    padding: .5em 1em;
	background: var(--accent);
	color: var(--background);
  }
</style>
