---
const quotes = [
	"Yeah!",
	"Nah...",
	"Eat more blueberries!",
	"I do research!",
	"Mmmmmm masala chai...",
	"Appreciate bugs!",
	"Trust the fungus!",
	"Pressure cooker extremely useful!",
	"Try a medlar!",
	"With no heart and no soul!",
	"Animated by dreams!",
]
const inp = Astro.url.pathname;
---

<div class="tilt">
	<div class="pop">
		{quotes[Array.from(inp).reduce((a, v) => a + v.charCodeAt(0), 0) % quotes.length]}
	</div>
</div>

<style>
	.tilt {
		color: yellow;
		font-family: "04b03";
		text-shadow:3px 3px #3F3F00;
		/* padding: 20px; */
		position: absolute;
		transform: rotate(25deg);
		text-align: center;
	}
	.pop {
		animation: pop 0.58s infinite;
	}
	@keyframes pop {
		from {
			transform:scale(0.95)
		}
		50% {
			transform:scale(1)
		}
		to {
			transform:scale(0.95)
		}
	}
</style>
