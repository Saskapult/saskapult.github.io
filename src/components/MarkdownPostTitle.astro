---
const { title, url } = Astro.props;
---

<h1 class="post-title">
	{url ? <a href={url} style="text-decoration:none">{title}</a> : title}
</h1>

<style>
	h1, h2, h3, h4, h5, h6 {
		display: flex;
		align-items: center;
		font-weight: bold;
		line-height: 1.3;
	}
	.post-title {
		--border: 2px dashed var(--accent);
		position: relative;
		color: rgb(120,226,160);
		margin: 0 0 15px;
		padding-bottom: 15px;
		border-bottom: var(--border);
		font-weight: normal;
	}
</style>